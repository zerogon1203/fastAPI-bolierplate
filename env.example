# FastAPI 애플리케이션 설정
APP_NAME="FastAPI 보일러플레이트"
APP_VERSION="1.0.0"
DEBUG=true
SECRET_KEY="your-secret-key-here-change-this-in-production"

# 서버 설정
HOST=0.0.0.0
PORT=8000

# 데이터베이스 설정
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/dbname
TEST_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/test_dbname

# Redis 설정 (캐싱)
REDIS_URL=redis://localhost:6379/0

# JWT 토큰 설정
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS 설정
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 로깅 설정
LOG_LEVEL=INFO

# 외부 API 설정 (필요시)
# EXTERNAL_API_URL=https://api.example.com
# EXTERNAL_API_KEY=your-api-key

# 이메일 설정 (필요시)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-password

# 파일 업로드 설정
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# AI/LLM 서비스 API 키들
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# LangSmith 설정 (Langchain 모니터링)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=fastapi-boilerplate

# MCP (Model Context Protocol) 설정
MCP_SERVERS_CONFIG_PATH=./config/mcp_servers.json
MCP_ENABLED=true

# 벡터 데이터베이스 설정 (선택사항)
PINECONE_API_KEY=your-pinecone-api-key
WEAVIATE_URL=http://localhost:8080
CHROMADB_PERSIST_DIRECTORY=./data/chromadb

# AI 모델 설정
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=4000
TEMPERATURE=0.7 