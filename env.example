# FastAPI 애플리케이션 설정
APP_NAME="FastAPI 보일러플레이트"
APP_VERSION="1.0.0"
DEBUG=true
SECRET_KEY="your-secret-key-here-change-this-in-production"

# 서버 설정
HOST=0.0.0.0
PORT=8000

# 데이터베이스 설정 (모듈식 구성)
# postgresql, mysql, sqlite 중 선택
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fastapi_db
DB_USER=username
DB_PASSWORD=password
# PostgreSQL/MySQL용 스키마
DB_SCHEMA=public
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_PRE_PING=true
# SQL 쿼리 로깅 (개발시에만 true)
DB_ECHO=false

# 테스트 데이터베이스 설정
TEST_DB_TYPE=postgresql
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=fastapi_test_db
TEST_DB_USER=username
TEST_DB_PASSWORD=password

# SQLite 설정 (DB_TYPE=sqlite인 경우)
SQLITE_DATABASE_PATH=./data/app.db
TEST_SQLITE_DATABASE_PATH=./data/test.db

# Redis 설정 (캐싱)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# JWT 토큰 설정
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS 설정
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 로깅 설정
LOG_LEVEL=INFO

# 외부 API 설정 (필요시)
# EXTERNAL_API_URL=https://api.example.com
# EXTERNAL_API_KEY=your-api-key

# 이메일 설정 (필요시)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-password

# 파일 시스템 설정
# local, s3 중 선택
FILE_STORAGE_TYPE=local
# 10MB in bytes
MAX_FILE_SIZE=10485760

# 로컬 스토리지 설정 (FILE_STORAGE_TYPE=local인 경우)
LOCAL_UPLOAD_DIR=./uploads
LOCAL_STATIC_DIR=./static

# AWS S3 설정 (FILE_STORAGE_TYPE=s3인 경우)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=your-bucket-name
S3_UPLOAD_PREFIX=uploads/
S3_STATIC_PREFIX=static/
S3_PUBLIC_READ=true
# MinIO나 다른 S3 호환 서비스용 (선택사항)
S3_ENDPOINT_URL=

# AI/LLM 서비스 API 키들
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# LangSmith 설정 (Langchain 모니터링)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=fastapi-boilerplate

# MCP (Model Context Protocol) 설정
MCP_SERVERS_CONFIG_PATH=./config/mcp_servers.json
MCP_ENABLED=true

# 벡터 데이터베이스 설정 (선택사항)
PINECONE_API_KEY=your-pinecone-api-key
WEAVIATE_URL=http://localhost:8080
CHROMADB_PERSIST_DIRECTORY=./data/chromadb

# AI 모델 설정
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=4000
TEMPERATURE=0.7 